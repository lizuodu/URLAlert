{
    "name": "URLAlert",
    "short_name": "URLAlert",
    "description": "可配置根据不同URL进行提醒",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon72.png"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "URLAlert",
        "default_icon": "images/icon72.png",
        "default_popup": "pages/options.html"
    },
    "manifest_version": 2,
    "author": "lizuodu@163.com",
    "homepage_url": "https://github.com/lizuodu/URLAlert"
}
